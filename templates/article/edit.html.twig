{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h2 class="text-center">modification d'un article</h2>
        {{ form_start(form_edit)}}

            <div class="form-group">
                <label class="control-label">{{ form_label( form_edit.titre)}}</label>
                {{ form_widget(form_edit.titre,{'attr': {'class': 'form-control'}})}}
            </div>
            
            <div class="form-group">
                <label class="control-label">{{ form_label( form_edit.description)}}</label>
                {{ form_widget(form_edit.description,{'attr': {'class': 'form-control'}})}}
            </div>

            <div class="form-group">
                <label class="control-label">{{ form_label( form_edit.created_at)}}</label>
                {{ form_widget(form_edit.created_at,{'attr': {'class': 'form-control'}})}}
            </div>
            <button class="btn btn-success float-right">modifier</button>
        {{form_end(form_edit) }}
    </div>
{% endblock %}